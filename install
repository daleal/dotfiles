#!/usr/bin/env bash

set -euo pipefail

DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

source "$DIR/lib/profile.sh"
select_profile "$DIR" "${1:-}"

echo ""
echo "=============== Installing packages ==============="
bash "$DIR/packages/install" "$PROFILE"

echo ""
echo "=============== Running scripts ==============="
bash "$DIR/scripts/install" "$PROFILE"

echo ""
echo "=============== Installing dotfiles ==============="
bash "$DIR/dotfiles/install" "$PROFILE"
