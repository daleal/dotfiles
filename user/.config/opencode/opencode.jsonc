{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "autoupdate": true,
  "formatter": {
    "eslint": {
      "command": ["npx", "eslint", "--fix", "$FILE"],
      "extensions": [
        ".js",
        ".jsx",
        ".mjs",
        ".cjs",
        ".ts",
        ".tsx",
        ".mts",
        ".cts",
        ".html",
        ".htm",
        ".css",
        ".scss",
        ".sass",
        ".less",
        ".vue",
        ".svelte",
        ".json",
        ".jsonc",
        ".yaml",
        ".yml",
        ".toml",
        ".xml",
        ".md",
        ".mdx",
        ".graphql",
        ".gql",
      ],
    },
  },
  "mcp": {
    "linear": {
      "type": "local",
      "command": ["npx", "mcp-remote", "https://mcp.linear.app/mcp"],
      "enabled": true
    }
  },
  "tools": {
    "linear": false
  }
}
